#autoload

typeset id="gh_my_issue"
local candidate_command="gh issue list --limit 100 --state open --assignee=\$FZF_PREVIEW_GITHUB_USER"

typeset -a fzf_options=(
  "${FZF_PREVIEW_DEFAULT_SETTING}"
  "--no-sort"
  "--prompt='Assigned Issue> '"
  "--header='C-o: open, C-c: closed, C-a: all'"
  "--preview=\"gh issue view {1}\""
)
typeset -a bind=(
  "${FZF_PREVIEW_DEFAULT_BIND}"
  "ctrl-o:reload(gh issue list --limit 100 --state open --assignee=\$FZF_PREVIEW_GITHUB_USER)"
  "ctrl-c:reload(gh issue list --limit 100 --state closed --assignee=\$FZF_PREVIEW_GITHUB_USER)"
  "ctrl-a:reload(gh issue list --limit 100 --state all --assignee=\$FZF_PREVIEW_GITHUB_USER)"
)
fzf_options+=("--bind=\"${(j:,:)bind}\"")
local fzf_command="fzf ${(j: :)fzf_options}"
typeset callback=("awk '{ print \$1 }'")

fzf-preview-complete $candidate_command $fzf_command $callback
BUFFER=${BUFFER/\#/}

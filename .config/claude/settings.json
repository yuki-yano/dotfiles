{
  "env": {
    "DISABLE_AUTOUPDATER": "1"
  },
  "includeCoAuthoredBy": false,
  "permissions": {
    "defaultMode": "acceptEdits"
  },
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "vde-notifier --claude --notifier swiftdialog"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "~/dotfiles/bin/claude-pre_tool_use-hook_bash.ts"
          }
        ]
      },
      {
        "matcher": "Grep",
        "hooks": [
          {
            "type": "command",
            "command": "~/dotfiles/bin/claude-pre_tool_use-hook_grep.ts"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "~/dotfiles/bin/claude-post_tool_use-hook_eol.ts"
          }
        ]
      },
      {
        "matcher": "MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "~/dotfiles/bin/claude-post_tool_use-hook_eol.ts"
          }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "~/dotfiles/bin/claude-post_tool_use-hook_eol.ts"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/dotfiles/bin/cc-statusline.ts"
  },
  "alwaysThinkingEnabled": true
}

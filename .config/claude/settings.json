{
  "includeCoAuthoredBy": false,
  "permissions": {
    "defaultMode": "acceptEdits"
  },
  "model": "opus",
  "statusLine": {
    "type": "command",
    "command": "ccusage statusline"
  },
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/dotfiles/bin/stop-send-notification.ts"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "~/dotfiles/bin/claude-pre_tool_use-hook_bash.ts"
          }
        ]
      },
      {
        "matcher": "Grep",
        "hooks": [
          {
            "type": "command",
            "command": "~/dotfiles/bin/claude-pre_tool_use-hook_grep.ts"
          }
        ]
      }
    ]
  }
}

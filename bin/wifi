airport_path="/System/Library/PrivateFrameworks/Apple80211.framework/Versions/Current/Resources/airport"

signals=( ▂▅▇)

# Get the wifi information and then set it to an info array
info=( $(eval "$airport_path" --getinfo | grep -E "^ *(agrCtlRSSI|state|lastTxRate|SSID):" | awk '{print $2}') )
if [[ ${#info[@]} -eq 0 ]]; then
    echo "#[fg=red]offline"
    exit 1
fi

rssi="${info[0]}"
rate="${info[2]}"
ssid="${info[3]}"

# Determine the signal from rssi of wifi
signal=""
for ((j = 0; j < "${#signals[@]}"; j++))
do
    if ((  $j == 0 && $rssi > -100 )) ||
        (( $j == 1 && $rssi > -80  )) ||
        (( $j == 2 && $rssi > -50  )); then
        signal="${signal}${signals[$j]} "
    else
        signal="${signal}  "
    fi
done

if [ "$rate" = 0 ]; then
    echo "#[ft=red]no_wifi"
    exit 1
fi

echo -e "#[fg=white]${ssid} #[fg=colour108]${rate}Mbps ${signal}"

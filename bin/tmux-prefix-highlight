#!/usr/bin/env bash

set -e

normal_mode_text='[Normal]'
prefix_pressed_text='[Prefix]'
copy_mode_text='[Copy]'

normal_fg='fg=colour75'
normal_bg='bg=colour237'
prefix_fg='fg=colour221'
prefix_bg='bg=colour237'
copy_fg='fg=colour70'
copy_bg='bg=colour237'

echo "#{?pane_in_mode,#[${copy_fg}]#[${copy_bg}]${copy_mode_text},#{?client_prefix,#[${prefix_fg}]#[${prefix_bg}]${prefix_pressed_text},#[${normal_fg}]#[${normal_bg}]${normal_mode_text}}}#[fg=colour255]"

[user]
  name  = yuki_yano
  email = yuki.ycino@gmail.com
[color]
  ui = auto
[core]
  autocrlf = input
  editor = nvim
  excludesfile = ~/.gitignore_global
  attributesfile = ~/.gitattributes
[pager]
  log  = (diff-highlight 2>/dev/null || cat) | ${PAGER:-less}
  show = (diff-highlight 2>/dev/null || cat) | ${PAGER:-less}
  diff = (diff-highlight 2>/dev/null || cat) | ${PAGER:-less}
[alias]
  edit = "!f() { git status -s | cut -b 4- | grep -v '\\/$' | uniq | fzf --multi --prompt 'Changed File>'; }; nvim `f`"
  edit-unmerged = "!f() { git ls-files --unmerged | cut -f2 | sort -u | fzf --multi --prompt 'Unmerged File>'; }; vim `f`"
[include]
  path = ~/.gitconfig.local
[push]
  default = current
[ghq]
  root = ~/repos
[diff]
  indentHeuristic = true
  compactionHeuristic = true
  tool = nvimdiff
  renames = copies
  mnemonicprefix = true
[difftool "nvimdiff"]
  cmd = "nvim -d -u ~/.vimrc \"$LOCAL\" \"$REMOTE\""
[difftool]
  prompt = false
[mergetool "Kaleidoscope"]
  cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
  trustexitcode = true
[merge]
  tool = Kaleidoscope
[url "git@github.com:"]
  pushInsteadOf = git://github.com/
  pushInsteadOf = https://github.com/
[url "git://github.com/"]
  insteadOf = https://github.com/
[rerere]
  enabled = true

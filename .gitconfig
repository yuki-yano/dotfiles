[user]
  name  = yuki_yano
  email = yuki.ycino@gmail.com

[color]
  ui             = auto
  diff           = auto
  diff-highlight = auto

[core]
  autocrlf       = input
  editor         = nvim
  excludesfile   = ~/.gitignore_global
  attributesfile = ~/.gitattributes_global

[alias]
  sync = !git checkout master && git pull origin master --rebase && git fetch -p origin && git branch -d $(git branch --merged | grep -v master | grep -v '*')
  openpr  = "!f() { hub browse -- `git log --merges --oneline --reverse --ancestry-path $1...master | grep 'Merge pull request #' | head -n 1 | cut -f5 -d' ' | sed -e 's%#%pull/%'`; }; f"

[pager]
  log  = diff-so-fancy | less
  show = diff-so-fancy | less
  diff = diff-so-fancy | less

[interactive]
  diffFilter = diff-highlight

[include]
  path = ~/.gitconfig.local
  path = .gitconfig.local

[push]
  default = current

[fetch]
  prune = true

[diff]
  indentHeuristic = true
  compactionHeuristic = true
  renames = true
  mnemonicprefix = false
  tool = nvimdiff

[merge]
  conflictStyle = diff3

[rebase]
  autostash = true
  autosquash = true

[help]
  autocorrect = -1

[rerere]
  enabled = true

[difftool]
  prompt = false

[difftool "nvimdiff"]
  cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""

[diff-so-fancy]
  markEmptyLines = true
  stripLeadingSymbols = false

[ghq]
  root = ~/.go/src
  root = ~/repos

[url "git@github.com:"]
  pushInsteadOf = git://github.com/
  pushInsteadOf = https://github.com/

[url "git://github.com/"]
  insteadOf = https://github.com/

[browse-remote "github.com"]
  top  = https://{host}/{path}
  ref  = https://{host}/{path}/tree/{short_ref}
  rev  = https://{host}/{path}/commit/{commit}
  pr   = https://{host}/{path}/pull/{short_ref}
  file = "https://{host}/{path}/{file.directory? and :tree or :blob}/{short_rev}/{file}{lines && \"#L%s\" % lines.join(\"-\")}"


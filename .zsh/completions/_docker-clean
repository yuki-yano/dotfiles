#compdef docker-clean

_docker-clean() {
  _arguments \
    '(- *)'{-h,--help}'[opens this help menu]' \
    {-v,--version}'[prints the current docker-clean version]' \
    {-H,--host}'[Specifies the docker host to run against]' \
    {-n,--dry-run}'[Adding this additional flag will list items to be]' \
    {-s,--stop}'[Stops all running containers]' \
    {-c,--containers}'[Removes all stopped containers]' \
    {-i,--images}'[Removes all untagged images]' \
    {-net,--networks}'[removes all empty Networks (all network cleans are only empty)]' \
    {-r,--restart}'[Restarts the docker machine/daemon]' \
    {-d,--created}'[By default, CREATED containers are set to be removed.  Adding this]' \
    {-t,--tagged}'[Removes all tagged images]' \
    {-a,--all}'[Stops and removes all Containers, Images, AND Restarts docker]' \
    {-l,--log}'[Adding this as an additional flag will list all]' \
    '*: :->modes'

  case $state in
    modes)
      _values \
        'mode' \
        'stop[Stops and removes all containers, cleans dangling volumes, and networks]' \
        'images[Removes all tagged and untagged images, stopped containers, dangling volumes, and networks]' \
        'run[Removes all stopped containers, untagged images, dangling volumes, and networks]' \
        'all[Stops and removes all containers, images, volumes and networks]'
      ;;
  esac
}
